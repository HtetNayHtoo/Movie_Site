<%= link_to"New Movie", new_movie_path%>

<div class="card-deck card-columns-lg">
    
    <% @movies.each do |movie| %>
    <div class="card">
        <% movie.poster_img.each do |poster_img| %>
          <%= image_tag(poster_img, style:"width:100px height:100px", class:"card-img-top") %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">Title : <%= movie.title %></h5>
          <p class="card-text">Category : <%= movie.category %></p>
          <p class="card-text">Price : <%= movie.price %></p>
          <% movie_detail_url.each do |p|%>
              <%= link_to 'Movie Details', movie_details_path, class: "card-link text-primary" %>
          <% end %>
           <br/><br/>
          <%= link_to 'Edit', edit_movie_path(movie) %> | <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %><br/><br/>
          <%= button_to 'Order', orders_path, class: "btn btn-primary" %>   
        </div>
    </div>
    <% end %>

  </div>
